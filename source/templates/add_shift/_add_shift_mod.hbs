<div class="mod">
    {{#if mods.length}}
    <div class="mod-list">
        <label for="mod-list-select">Select Shift Modifiers</label>
        <select multiple class="shift__mod form-control" id="mod-list-select" size="{{mods.length}}">
            {{#each mods}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    {{else}}
    <p>Must be an error, there should be a modifier to pick from.</p>
    {{/if}}
</div>