<div class="staff">
    {{#if staffForClerkPick.length}}
    <div class="staff-search-wrap">
        <input class="staff-search-box form-control" data-staff-list="staffForClerkPick" type="text" placeholder="Type to search for a staff to add..">
        <ul class="staff-search-suggestions">
        </ul>
    </div>
    <div class="clerk-list mt-2">
        <div class="d-flex justify-content-between align-items-baseline">
            <label for="clerks-list-select">Select Shift Clerks</label>
            <p class="select-count small text-muted">&nbsp;</p>
        </div>
        <select class="shift__clerks select-count-data form-control" id="clerks-list-select" size="{{chooseMaxUpTo staffForClerkPick.length 5 9}}" multiple>
            {{#each staffForClerkPick}}
            <option value="{{this.id}}" {{checkIfIdSelected this.id @root.clerkIds}}>{{this.lastName}}, {{this.firstName}} ({{this.categoryName}})</option>
            {{/each}}
        </select>
    </div>
    {{else}}
    <p>All staff have a shift this day already, or there are no staff, use the single shift add form to add individual shifts.</p>
    {{/if}}
</div>

