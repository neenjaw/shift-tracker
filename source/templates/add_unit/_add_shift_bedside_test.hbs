<div class="staff">
    {{#if staffForBedsidePick.length}}
    <div class="staff-search-wrap">
        <input class="staff-search-box form-control" type="text" placeholder="Type to search for a staff to add..">
        <ul class="staff-search-suggestions">
        </ul>
    </div>
    <div class="staff-list mt-2">
        <label for="bedside-list-select">Select Shift Bedside Nurses</label>
        <p class="select-count small text-muted"></p>
        <select class="shift__bedside form-control" id="bedside-list-select" size="{{chooseMaxUpTo staffForBedsidePick.length 5 9}}" multiple>
            {{#each staffForBedsidePick}}
            <option value="{{this.id}}" {{checkIfIdSelected this.id @root.bedsideIds}}>{{this.lastName}}, {{this.firstName}} ({{this.categoryName}})</option>
            {{/each}}
        </select>
    </div>
    {{else}}
    <p>All staff have a shift this day already, or there are no staff, use the single shift add form to add individual shifts.</p>
    {{/if}}
</div>

