<div class="staff">
    {{#if staffForClinicianPick.length}}
        <div class="staff-search-wrap">
            <input class="staff-search-box form-control" data-staff-list="staffForClinicianPick" type="text" placeholder="Type to search for a staff to add..">
            <ul class="staff-search-suggestions">
            </ul>
        </div>
        <div class="staff-list mt-2">
            <div class="d-flex justify-content-between align-items-baseline">
                <label for="clinician-list-select">Select Shift Clinician</label>
                <p class="select-count small text-muted">&nbsp;</p>
            </div>
            <select class="shift__clinician select-count-data form-control" id="clinician-list-select" size="{{chooseMaxUpTo staffForClinicianPick.length 5 9}}">
                {{#each staffForClinicianPick}}
                    <option value="{{this.id}}" data-category="{{this.categoryName}}" {{#if @root.clinicianId}}{{#ifMatch @root.clinicianId this.id}}selected{{/ifMatch}}{{else}}{{#if @first}}selected{{/if}}{{/if}}>{{this.lastName}}, {{this.firstName}} ({{this.categoryName}})</option>
                {{/each}}
            </select>
        </div>
    {{else}}
        <p>All staff have a shift this day already, or there are no staff.</p>
    {{/if}}
</div>

